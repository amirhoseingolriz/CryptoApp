<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_list_coin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/img_coin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title_item_coin"
        style="@style/CoinText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/txt_price_item_coin"
        app:layout_constraintStart_toEndOf="@id/img_coin"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BitCoin" />

    <TextView
        android:id="@+id/txt_price_item_coin"
        style="@style/CoinText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="$ 0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/txt_title_item_coin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_title_item_coin" />


    <TextView
        android:id="@+id/txt_percent_change_item"
        style="@style/CoinText.TitleAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        tools:text="0"
        app:layout_constraintStart_toStartOf="@id/txt_title_item_coin"
        app:layout_constraintTop_toBottomOf="@id/txt_title_item_coin" />


    <TextView
        android:id="@+id/txt_market_cap_item"
        style="@style/CoinText.TitleAlternate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="$ 0"
        app:layout_constraintBottom_toBottomOf="@id/txt_percent_change_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_percent_change_item" />


</androidx.constraintlayout.widget.ConstraintLayout>